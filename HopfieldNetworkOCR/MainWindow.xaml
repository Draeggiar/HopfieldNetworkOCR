<Window x:Class="HopfieldNetworkOCR.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:userControls="clr-namespace:HopfieldNetworkOCR.UserControls"
        mc:Ignorable="d"
        Title="HopfieldNetworkOCR" Height="500" Width="650"
        UseLayoutRounding="True">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="MarginLeft" Width="0.1*"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition x:Name="MarginRight" Width="0.1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition x:Name="TopMenuRow" Height="0.1*"/>
            <RowDefinition x:Name="MarginTop" Height="0.05*"/>
            <RowDefinition/>
            <RowDefinition Height="0.2*"/>
            <RowDefinition x:Name="ErrorLabel" Height="0.15*"/>
            <RowDefinition x:Name="MarginBottom" Height="0.05*"/>
        </Grid.RowDefinitions>

        <userControls:MenuTop x:Name="MenuTop" Grid.Row="0" Grid.ColumnSpan="2" VerticalAlignment="Top" HorizontalAlignment="Left"/>

        <!-- TODO Custom image container -->
        <Image Name="imgInput" Stretch="Uniform"
               Grid.Column="1" Grid.ColumnSpan="2"
               Grid.Row="2"
               Margin="8px"></Image>
        <Image Name="imgOutput" Stretch="Uniform"
               Grid.Column="3" Grid.ColumnSpan="2"
               Grid.Row="2"
               Margin="8px"></Image>
        
        <Button Name="btnChoseImageToRecognize"
            Grid.Column="1" Grid.ColumnSpan="2"
            Grid.Row="3"
            Width="180px" Height="30px"
            Click="btnChoseImageToRecognize_OnClick" >Wybierz obraz do rozpoznania</Button>
        
        <Button Name="btnRecognizeImage"
                Grid.Column="3" Grid.ColumnSpan="2"
                Grid.Row="3"
                Width="120" Height="30"
                Click="btnRecognizeImage_OnClick">Rozpoznaj obraz</Button>
    </Grid>
</Window>

